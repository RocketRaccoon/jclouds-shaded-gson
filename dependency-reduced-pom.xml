<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>rocket.raccoon</groupId>
  <artifactId>jclouds-shaded-gson</artifactId>
  <version>2.1.1</version>
  <url>https://github.com/RocketRaccoon/jclouds-shaded-gson</url>
  <scm>
    <connection>scm:git:git@github.com:RocketRaccoon/jclouds-shaded-gson.git</connection>
    <developerConnection>scm:git:git@github.com:RocketRaccoon/jclouds-shaded-gson.git</developerConnection>
    <url>https://github.com/RocketRaccoon/jclouds-shaded-gson</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>com.google.code.gson</pattern>
                  <shadedPattern>com.shaded.code.gson</shadedPattern>
                </relocation>
              </relocations>
              <transformers>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>bintray-rocketraccoon-jclouds-shaded-gson-repo</id>
      <name>rocketraccoon-jclouds-shaded-gson-repo</name>
      <url>https://api.bintray.com/maven/rocketraccoon/jclouds-shaded-gson-repo/jclouds-shaded-gson/;publish=1</url>
    </repository>
  </distributionManagement>
</project>

